[flake8]
max-line-length = 127
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules

# Error codes
# E9: Runtime errors (syntax errors, indentation errors)
# F63: Invalid print statement
# F7: Syntax errors in type comments
# F82: Undefined names in __all__

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
